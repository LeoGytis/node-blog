<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node BLOG | <%= title %></title>
  </head>
</html>

<% const name = 'Gytis '%>

<nav>
  <div class="site-title">
    <p>Welcome <%= name %>!</p>
    <a href="/"><h1>Node Blog</h1></a>
    <p>Lets create something beautifull</p>
  </div>
  <ul>
    <li>
      <a href="/">Home</a>
    </li>
    <li>
      <a href="/about">About</a>
    </li>
    <li>
      <a href="/blogs/create">New Blog</a>
    </li>
  </ul>
</nav>

<div class="blogs content">
  <h1>Blogs are here</h1>
  <% if (blogs.length > 0) { %> <% blogs.forEach(blog => { %>
  <div class="blog">
    <h2 class="title"><%= blog.title %></h2>
    <p clas="snippet"><%= blog.snippet %></p>
    <a href="/blogs/<%= blog.id %>">Read more</a>
  </div>
  <% }) %> <% } else { %>
  <p>No blogs to show</p>
  <% } %>
</div>
